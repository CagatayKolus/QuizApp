<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textview_quiz_life_time"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/montserrat_bold"
        android:textAlignment="center"
        android:textColor="@color/black80"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/progressbar_quiz_life_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/progressbar_quiz_life_time"
        tools:text="50" />

    <TextView
        android:id="@+id/textview_quiz_remaining_time"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/montserrat_bold"
        android:textAlignment="center"
        android:textColor="@color/black80"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/progressbar_quiz_remaining_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/progressbar_quiz_remaining_time"
        tools:text="15" />

    <ProgressBar
        android:id="@+id/progressbar_quiz_life_time"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:max="50"
        android:progress="50"
        android:progressTint="@color/sunset_orange"
        android:scaleY="5"
        app:layout_constraintEnd_toStartOf="@+id/textview_quiz_life_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressbar_quiz_remaining_time" />

    <ProgressBar
        android:id="@+id/progressbar_quiz_remaining_time"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:max="15"
        android:progress="15"
        android:progressTint="@color/weldon_blue"
        android:scaleY="5"
        app:layout_constraintEnd_toStartOf="@+id/textview_quiz_remaining_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearlayout_quiz_network_status" />

    <TextView
        android:id="@+id/textview_quiz_question"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/black80"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/button_quiz_answer_a"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressbar_quiz_life_time"
        tools:text="Which is the tallest mountain in the world?" />

    <TextView
        android:id="@+id/textview_quiz_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/quiz_image_question"
        android:textColor="@color/black80"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/button_quiz_answer_a"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_quiz_answer_a"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/stormcloud"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/button_quiz_answer_b"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Mount Fuji" />

    <Button
        android:id="@+id/button_quiz_answer_b"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/stormcloud"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/button_quiz_answer_c"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Mount Fuji" />

    <Button
        android:id="@+id/button_quiz_answer_c"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/stormcloud"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/button_quiz_answer_d"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Mount Fuji" />

    <Button
        android:id="@+id/button_quiz_answer_d"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/stormcloud"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/guideline_quiz_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Mount Fuji" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_quiz_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <ProgressBar
        android:id="@+id/progressbar_quiz_loading"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearlayout_quiz_network_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/connectivity_fail"
        android:orientation="vertical"
        android:padding="8dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textview_quiz_network_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            tools:text="@string/internet_connectivity_fail" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageview_quiz_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/textview_quiz_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressbar_quiz_life_time"
        tools:srcCompat="@tools:sample/backgrounds/scenic[1]"
        tools:visibility="invisible" />

</androidx.constraintlayout.widget.ConstraintLayout>
